        data-original=\"https:\u002F\u002Fpic4.zhimg.com\u002Fv2-10495914d4e2844a51b85fe817fb4029_r.jpg\"\u003E\u003C\u002Fnoscript\u003E\u003Cimg
        src=\"data:image\u002Fsvg+xml;utf8,&lt;svg%20xmlns='http:\u002F\u002Fwww.w3.org\u002F2000\u002Fsvg'%20width='641'%20height='342'&gt;&lt;\u002Fsvg&gt;\"
